<% if(success && success.length){ %>
    <div class="alert alert-success alert-dismissible fade show d-flex justify-content-between align-items-center" role="alert" id="alert">
        <div class="d-flex align-items-center">
            <i class="fa-solid fa-circle-check"></i>
            <span class="ms-2"><%= success %></span>
        </div>
    </div>
    <% } %>


    




<% if(error && error.length){ %>
    <div class="alert alert-danger alert-dismissible fade show d-flex justify-content-between align-items-center" role="alert" id="alert">
        <div class="d-flex align-items-center">
            <i class="fa-solid fa-triangle-exclamation"></i>
            <span class="ms-2">
                <%= error %>
            </span>
        </div>
    </div>
<% } %>










<script>

    document.addEventListener('DOMContentLoaded', (event) => {
        setTimeout(() => {
            let successAlert = document.getElementById('alert');
            if (successAlert) {
                let bsAlert = new bootstrap.Alert(successAlert);
                bsAlert.close();
            }
        }, 2000);
    });
</script>